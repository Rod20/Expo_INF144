<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/icons8_iniciar_navegador_64"
        android:layout_marginTop="140dp"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/inputEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:hint="@string/email"
        android:textColorHint="@color/colorPlumb"
        android:backgroundTint="@color/colorPrimary"
        android:inputType="textEmailAddress"/>
    <TextView
        android:id="@+id/textErrorEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:textColor="@color/colorAccent"
        android:textStyle="italic|bold"
        />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/textLayoutPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_gravity="center"
        android:textColorHint="@color/colorPlumb"
        android:backgroundTint="@color/colorPrimary"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/colorPlumb">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/inputPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:backgroundTint="@color/colorPrimary"
            android:inputType="textPassword"
            />
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:id="@+id/textErrorPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:textColor="@color/colorAccent"
        android:textStyle="italic|bold"
        />
    <Button
        android:id="@+id/buttonNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:text="@string/buttonNext"
        android:background="@drawable/bordes"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:textColor="@color/colorWhite"
        android:onClick="goNextActivity"/>
    <!--<Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:text="@string/buttonRegistrarse"
        android:background="@drawable/borde2"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"/>-->

</LinearLayout>